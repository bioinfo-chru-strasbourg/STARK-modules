#DOCKER_STARK_MODULE_SUBMODULE_SERVICE_PORTAINER_IMAGE_REPOSITORY=${DOCKER_STARK_IMAGE_REPOSITORY}
DOCKER_STARK_MODULE_SUBMODULE_SERVICE_PORTAINER_IMAGE_NAME=${DOCKER_STARK_MODULE_SUBMODULE_PREFIX}-service-${DOCKER_STARK_MODULE_SUBMODULE_SERVICE_PORTAINER_NAME}
